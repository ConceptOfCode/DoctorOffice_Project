
@model HeaderInformationSite_ViewModel

<header class="header-section">
    <div class="container">
        <!-- Site Logo -->
        <a href="index.html" class="site-logo">
            <img src="img/logo.png" alt="" />
        </a>
        <!-- responsive -->
        <div class="nav-switch">
            <i class="fa fa-bars"></i>
        </div>
        <!-- Main Menu -->
        <ul class="main-menu">
            <!-- <li><a href="elements.html"><i class="flaticon-020-decay"></i></a></li> -->
            @*<li><a href="#">تماس با ما</a></li>*@
            <li><a asp-action="AboutUs">درباره ما</a></li>
            <!-- <li><a href="blog.html">وبلاگ</a></li> -->
            <li><a asp-action="TemporaryReserve">رزرو نوبت</a></li>
            <li><a href="/Identity/Account/Login?ReturnUrl=">ورود به حساب کاربری</a></li>
            <li><a asp-controller="Home" asp-action="createPatients">تشکیل پرونده</a></li>
            <li class="active"><a href="/">خانه</a></li>
        </ul>
    </div>

    <div class="header-info">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 hi-item">
                    <div class="hs-icon">
                        <img src="img/icons/map-marker.png" alt="" />
                    </div>
                    <div class="hi-content">
                        <h6>نشانی مطب</h6>
                        <p>@Model.shortAddress</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 hi-item">
                    <div class="hs-icon">
                        <img src="img/icons/clock.png" alt="" />
                    </div>
                    <div class="hi-content">
                        <h6>ساعت کاری</h6>
                        <p><a id="hourWorking" href="#footer" class="">مشاهده ساعات کاری</a></p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 hi-item">
                    <div class="hs-icon">
                        <img src="img/icons/phone.png" alt="" />
                    </div>
                    <div class="hi-content">
                        <h6>شماره تماس</h6>
                        <p>@Model.clinicPhone</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 hi-item">
                    <div class="hs-icon">
                        <img src="img/icons/calendar.png" alt="" />
                    </div>
                    <div class="hi-content">
                        <h6>تاریخ امروز</h6>
                        <p>@Model.currentDateTime</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>