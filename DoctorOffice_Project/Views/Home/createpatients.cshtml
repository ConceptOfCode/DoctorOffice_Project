                <label class="control-label col-sm-3">جنسیت</label>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-md-9">
                                    <select class="form-control" name="Gender">
                                            <option>مرد</option>
                                            <option>خانم</option>
                                     </select>
                        </div>
                    </div>
                </div>
            </div>  -->
            <!-- /.form-group -->
            <div class="form-group text-right">
                <label for="birthDate" class="col-sm-3 control-label">تصویر</label>
                <div class="col-sm-9">
                    <input type="file" name="imageName" id="imageName" class="form-control">
                </div>
            </div>
            <div class="form-group">

            </div>
            <input id="Save" value="ثبت نام" type="submit" class="btn btn-success btn-block" />
            <button href="#" class="btn btn-danger btn-block">انصراف</button>
        </form>
        <!-- /form -->
    </div> <!-- ./container -->

    @section ScriptsOnViews{
            <script>
                $('#folderContent').css({ 'background-image': 'url("/img/slide-1.jpg")','background-repeat':'no-repeat','background-attachment':'fixed','background-size':'cover'});

            </script>
        }
</div>