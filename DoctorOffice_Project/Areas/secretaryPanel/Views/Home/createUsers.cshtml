
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "createUsers";
    Layout = "~/Areas/secretaryPanel/Views/Shared/_secretaryLayout.cshtml";
}

<div class="jumbotron jumbotron-fluid container">

    <main dir="rtl" class="my-form" id="registerUsers">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header getFont text-right">ثبت نام کاربران</div>
                        <form method="post" action="/createUsers" onsubmit="return IsSuccess" id="usersForm">
                            <div class="card-body">

                                <div class="form-group row">
                                    <label for="full_name" class="col-md-4 col-form-label text-md-right">ایمیل کاربر:</label>
                                    <div class="col-md-6">
                                        <input type="text" id="email" class="form-control margin-top-2-3" name="Email">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">رمز عبور کاربر:</label>
                                    <div class="col-md-6">
                                        <input type="text" id="pass" class="form-control margin-top-2-3" name="Password">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="user_name" class="col-md-4 col-form-label text-md-right">تکرار رمز عبور:</label>
                                    <div class="col-md-6">
                                        <input type="text" id="passConfirm" class="form-control margin-top-2-3" name="PasswordConfirmed">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="user_name" class="col-md-4 col-form-label text-md-right">نقش کاربر:</label>
                                    <div class="col-md-6">
                                        <select name="Role" class="form-control margin-top-2-3">
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.Name">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="row text-right">
                                    <div class="col-xl-6">
                                        <button type="submit" class="btn btn-primary" id="save">
                                            ثبت نام
                                        </button>
                                        <a class="btn btn-danger" asp-controller="Home" asp-action="Index" asp-area="secretaryPanel">انصراف</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>


<div class="modal" tabindex="-1" role="dialog" id="Modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-right" id="headerModal" dir="rtl">
                <h5 class="modal-title" id="ModalTitle">Modal title</h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
            </div>
            <div class="modal-body text-right" id="ModalBody">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section ScriptsViews{ 
    <script src="~/js/AuthorizeScripts.js"></script>
}