
@{
    ViewData["Title"] = "insertData";
    Layout = "~/Areas/secretaryPanel/Views/Shared/_secretaryLayout.cshtml";
}

    <div class="jumbotron jumbotron-fluid container">

        <div class="alert alert-primary text-center container">
            <h4>تشکیل پرونده بیماران مطب</h4>
        </div>

        <form action="/insertPatients" method="post" enctype="multipart/form-data" id="insertPatients" onsubmit="return isSuccess">
            <div class="alert alert-warning text-center">
                <h4>لطفا اطلاعات زیر را با دقت پر کنید</h4>
            </div>
            <div class="row " id="folderPatients">
                <div class="col-xl-12">
                    <div class="col-xl-6 float-left offset-xl-3 text-right" id="folderContent">
                        <section class="col-xl-3 offset-xl-12 text-center">
                            <img src="img/slide-1.jpg" alt="" style="max-height: 60px; margin-top: 10px;"><br>
                        </section>
                        <label>نام : </label>
                        <input type="text" name="firstName" id="" class="form-control" placeholder="نام بیمار...">
                        <label>نام خانوادگی : </label>
                        <input type="text" name="lastName" id="" class="form-control" placeholder="نام خانوادگی بیمار...">
                        <label>نام پدر : </label>
                        <input type="text" name="fatherName" id="" class="form-control" placeholder="نام پدر بیمار...">
                        <label>شماره ملی : </label>
                        <input type="text" name="nationalNumber" id="nationalNumber" class="form-control" placeholder="شماره ملی بیمار...">
                        <label>تاریخ تولد : </label>
                        <input type="text" name="birthDate" id="" class="form-control" placeholder="تاریخ تولد بیمار...">
                        <label>تصویر : </label>
                        <input type="file" name="imgUp" id="" class="form-control" placeholder="عکس بیمار این قسمت اختیاری است...">
                        <label>شماره تلفن : </label>
                        <input type="number" name="phoneNumber" id="" class="form-control" placeholder="شماره تلفن بیمار...">
                        <label>پست الکترونیک : </label>
                        <input type="email" name="Email" id="" class="form-control" placeholder="پست الکترونیک بیمار...">

                        <div id="folderBtn" class="text-center">
                            <input type="submit" value="ذخیره" class="btn btn-success" id="patientsSave">
                            <a asp-controller="patients" asp-action="Index" asp-area="secretaryPanel" class="btn btn-danger">انصراف</a>
                        </div>
                    </div>


                </div>
            </div>

        </form>

    </div>




        <div class="modal" tabindex="-1" role="dialog" id="Modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-right" id="headerModal" dir="rtl">
                        <h5 class="modal-title" id="ModalTitle">Modal title</h5>
                        @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>*@
                    </div>
                    <div class="modal-body text-right" id="ModalBody">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                    </div>
                </div>
            </div>
        </div>

