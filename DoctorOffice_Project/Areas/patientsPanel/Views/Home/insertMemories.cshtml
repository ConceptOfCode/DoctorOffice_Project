
@model patients

@{
    ViewData["Title"] = "insertMemories";
    Layout = "~/Areas/patientsPanel/Views/Shared/_patientsLayout.cshtml";
}


@section StylesOnViews{
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/img/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/Reservemain.css">
    <link rel="stylesheet" type="text/css" href="~/css/Reserveutil.css">
    <!--===============================================================================================-->
}


<div class="">
    <div class="container-contact1">
        <div class="contact1-pic js-tilt" data-tilt>
            <img src="~/img/img-01.png" alt="IMG">
        </div>

        <form action="/patientsPanel/newMemories" method="post" class="contact1-form validate-form">

            <input type="text" name="PatientsID" value="@Model.patientsID" hidden />

            <div class="alert alert-success">
                <h4 class="contact1-form-title">
                    شما میتوانید نظریات یا خاطرات خود را از آخرین نوبت خود را برای عموم انشار دهید
                </h4>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Name is required">
                <input class="input1" type="text" name="PatientsFullName" value="@Model.firstName @Model.lastName" placeholder="نام و نام خانوادگی">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input">
                <input class="input1" type="text" name="nationalNumber" value="@Model.nationalNumber" placeholder="شماره ملی">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Subject is required">
                <input class="input1" id="memoriesTitle" type="text" name="memoriesTitle" placeholder="عنوان خاطره">
                <span class="shadow-input1"></span>
            </div>

            @*<div class="wrap-input1 validate-input" data-validate="Subject is required">
                <select name="employeeID" class="input1 getFont" style="border-radius:25px; height:50px;">
                    @foreach (var item in Model.Item2)
                    {
                        if (item.Type == 1)
                        {
                            <option value="@item.employeeID">دکتر @item.firstName @item.lastName</option>
                        }
                    }
                </select>
            </div>*@

            <div class="wrap-input1 validate-input" data-validate="Message is required">
                <textarea class="input1" name="fullTextMemories" placeholder="متن کامل خاطره..." cols="20" rows="12"></textarea>
                <span class="shadow-input1"></span>
            </div>

            <div class="container-contact1-form-btn">
                <button class="contact1-form-btn">
                    <span>
                        ثبت نوبت
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>

