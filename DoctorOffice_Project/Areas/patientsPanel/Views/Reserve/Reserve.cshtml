
@{
    ViewData["Title"] = "Reserve";
    Layout = "~/Areas/patientsPanel/Views/Shared/_patientsLayout.cshtml";
}


<div class="jumbotron jumbotron-fluid">
    <form action="">
        <div class="row " id="folderPatients">
            <div class="col-xl-12">
                <div class="col-xl-6 float-left offset-xl-3 text-right" id="folderContent">
                    <section class="alert alert-primary col-xl-12 text-center" style="margin-top: 2em;">
                        <h4>اطلاعات زیر را بادقت پر کنید</h4>
                    </section>
                    <label>شماره ملی : </label>
                    <input type="text" name="nayionalNumber" id="" class="form-control">
                    <label>نام خانوادگی : </label>
                    <input type="text" name="fullName" id="" class="form-control">
                    <label>تاریخ رزرو : </label>
