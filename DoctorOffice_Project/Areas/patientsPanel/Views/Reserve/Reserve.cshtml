<div class="">
    <div class="container-contact1">
        <div class="contact1-pic js-tilt" data-tilt>
            <img src="~/img/img-01.png" alt="IMG">
        </div>

        <form action="/PatientsPanel/newReserve" method="post" class="contact1-form validate-form">

            <input type="text" name="PatientID" value="@Model.Item1.patientsID" hidden/>

            <h4 class="contact1-form-title">
                رزرو نوبت بیماران
            </h4>

            <div class="wrap-input1 validate-input" data-validate="Name is required">
                <input class="input1" type="text" name="PatientsFullName" value="@Model.Item1.firstName @Model.Item1.lastName" placeholder="نام و نام خانوادگی">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input">
                <input class="input1" type="text" name="nationalNumber" value="@Model.Item1.nationalNumber" placeholder="شماره ملی">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Subject is required">
                <input class="input1" id="reserveDate" type="text" name="reserveDate" placeholder="تاریخ رزرو">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Subject is required">
                <select name="employeeID" class="input1 getFont" style="border-radius:25px; height:50px;">
                    @foreach (var item in Model.Item2)
                    {
                        if (item.Type == 1)
                        {
                            <option value="@item.employeeID">دکتر @item.firstName @item.lastName</option>
                        }
                    }
                </select>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Message is required">
                <textarea class="input1" name="Description" placeholder="توضیحات"></textarea>
                <span class="shadow-input1"></span>
            </div>

            <div class="container-contact1-form-btn">
                <button class="contact1-form-btn">
                    <span>
                        ثبت نوبت
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>

