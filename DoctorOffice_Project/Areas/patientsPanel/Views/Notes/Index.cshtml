    <div class="row" id="searchField">
        <section class="col-lg-4 col-md-4 col-sm-4 col-xl-2">
            <section class="row">
                <section class="col-lg-6 col-md-6 col-sm-6 col-xl-6">
                    <label>تاریخ :</label>
                </section>
            </section>
        </section>
        <section class="col-lg-3 col-md-3 col-sm-3 col-xl-3 text-center">
            <input type="text" class="form-control" name="" id="fromDate" placeholder="از تاریخ ...">
        </section>
        <section class="col-lg-3 col-md-3 col-sm-3 col-xl-3 text-center">
            <input type="text" class="form-control" name="" id="toDate" placeholder="تا تاریخ ...">
        </section>
        <section class="col-lg-2 col-md-2 col-sm-2 col-xl-2 text-right">
            <a id="searchButton" class="btn btn-success">جست و جو</a>
        </section>
    </div>

<table id="noteList" class="table table-hover table-bordered">
    <thead class="thead-dark">
    <th>کد یاداشت</th>
    <th>شناسه نوبت</th>
    <th>عنوان یاداشت</th>
    <th>مشخصات دکتر</th>
    <th>تاریخ ثبت</th>
    <th>عملیات</th>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NoteID</td>
                <td>@item.TurnsID</td>
                <td>@item.noteTitle</td>
                <td>@item.doctorFullName</td>
                <td>@item.createDateTime</td>
                <td>
                    <a asp-controller="Notes" asp-action="Details" asp-area="patientsPanel" asp-route-id="@item.NoteID" class="btn btn-sm btn btn-primary">جزییات</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div id="statusSearch"></div>


<div class="modal" tabindex="-1" role="dialog" id="Modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="headerModal">
                <h5 class="modal-title" id="ModalTitle">Modal title</h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
            </div>
            <div class="modal-body" id="ModalBody">

            </div>
            <div class="modal-footer" id="btns">
                <button type="button" class="btn btn-primary" id="AcceptDelete">می پذیرم</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>



@section ScriptsInViews{
    <script src="~/js/PatientsPanel_Notes.js"></script>
}